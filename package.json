{
  "name": "vscode-marketplace-preview",
  "displayName": "vscode-marketplace-preview",
  "description": "Preview how the manifest of your extension will look in the Visual Studio",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-marketplace-preview.preview",
        "title": "Preview Manifest",
        "category": "Marketplace",
        "icon": "$(preview)",
        "enablement": "resourceFilename == package.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-marketplace-preview.preview",
          "group": "navigation@1",
          "when": "resourceFilename == package.json"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "axios": "^1.1.3",
    "markdown-it": "^8.4.2"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
